server {
    if ($host = nextcloud.yrcloud.kiev.ua) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        listen [::]:80;
        server_name nextcloud.yrcloud.kiev.ua;
        # Redirect http to https
        return 301 https://$server_name$request_uri;
        # nextcloud ralated thing
        proxy_buffering off;


}

# HTTPS
server {
      listen 443 ssl http2;
      listen [::]:443 ssl http2;
      server_name nextcloud.yrcloud.kiev.ua;

      # logging
     access_log /var/log/nginx/nextcloud.yrcloud.kiev.ua.access.log;
     error_log /var/log/nextcloud.yrcloud.kiev.ua.error.log;

     #  ssl on;
     # Certificate Path: /etc/letsencrypt/live/yrcloud.kiev.ua-0001/fullchain.pem
     # Private Key Path: /etc/letsencrypt/live/yrcloud.kiev.ua-0001/privkey.pem
     # ssl_certificate /etc/letsencrypt/live/yrcloud.kiev.ua-0001/cert.pem;
    ssl_certificate /etc/letsencrypt/live/nextcloud.yrcloud.kiev.ua/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/nextcloud.yrcloud.kiev.ua/privkey.pem; # managed by Certbot
     # ssl_trusted_certificate /etc/letsencrypt/live/nextcloud.yrcloud.kiev.ua/chain.pem;
  # ssl params
  ssl_session_timeout 1d;
  ssl_session_cache shared:MozSSL:10m;
  ssl_session_tickets off;
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
  ssl_prefer_server_ciphers off;
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 1.1.1.1 9.9.9.9 valid=300s;
  resolver_timeout 5s;
    # nextcloud tunung
    add_header Strict-Transport-Security "max-age=15552000; includeSubDomains;";

location = /.well-known/carddav {
    return 301 https://$host/remote.php/dav;
  }

  location = /.well-known/caldav {
    return 301 https://$host/remote.php/dav;
  }

  location = /.well-known/webfinger {
    return 301 /index.php$uri;
  }
  location = /.well-known/nodeinfo {
   return 301 https://$host/remote.php/dav;
  }
# Proxy pass related
  location / {
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# include ip-white list from /etc/nginx/acess-list/...
   include /etc/nginx/access-list/ip-white-list-nextcloud;
   deny all;
   # uplopad size
   client_max_body_size 110G;
   fastcgi_connect_timeout 60;
        fastcgi_send_timeout 4000;
        fastcgi_read_timeout 4000;


        fastcgi_buffers 8 16k;
        fastcgi_buffer_size 32k;
    # Where to pass
   proxy_headers_hash_max_size 512;
   proxy_headers_hash_bucket_size 64;
   proxy_set_header Host $host;
   proxy_set_header X-Forwarded-Proto $scheme;
   proxy_set_header X-Real-IP $remote_addr;
   proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

   add_header Front-End-Https on;

   proxy_pass http://192.168.168.7/;

   # Websocket closing prevention
   proxy_read_timeout 36000;

    }

}
